package task1.tests.echo;

public class EchoTest {
    public static void main(String[] args) {
        // Configuration d'un Broker (implémentation à définir)
        Broker broker = new Broker("ServerBroker");

        // Lancer le serveur d'écho
        EchoServer server = new EchoServer(broker, 12345);
        server.start();

        // Créer plusieurs clients et les lancer
        for (int i = 0; i < 5; i++) {
            EchoClient client = new EchoClient(broker, "ServerBroker", 12345);
            client.start();
        }

        // Attendre la fin des threads pour terminer
        try {
            server.join();
        } catch (InterruptedException e) {
            e.printStackTrace();
        }
    }
}

